{
  "name": "headbreaker",
  "version": "4.0.0",
  "description": "Jigsaw puzzles library written in TypeScript",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "all": "npm run typecheck && npm test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flbulgarelli/headbreaker.git"
  },
  "author": "Franco Leonardo Bulgarelli",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/flbulgarelli/headbreaker/issues"
  },
  "homepage": "https://github.com/flbulgarelli/headbreaker#readme",
  "devDependencies": {
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  },
  "optionalDependencies": {
    "konva": "^9.0.0"
  }
}
